<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="15dp"
    android:paddingTop="10dp"
    android:paddingEnd="15dp">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/sunny_small_px"
        app:tint="@color/gray" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/likes_textview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="@string/my_dynamics_light_up_count"
        android:textColor="@color/gray" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/mail_24px"
        app:tint="@color/gray" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/comment_textview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="@string/my_dynamics_message"
        android:textColor="@color/gray" />

    <ImageView
        android:id="@+id/shared_dynamic"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:src="@drawable/send_24px"
        app:tint="@color/gray" />

</LinearLayout>
